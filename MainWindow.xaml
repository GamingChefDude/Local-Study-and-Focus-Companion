<Window x:Class="Local_Study_and_Focus_Companion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Local_Study_and_Focus_Companion"
        mc:Ignorable="d"

        Title="MainWindow"
        Width="1280"
        Height="720"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Border 
            Width="150"
            Height="200"
            CornerRadius="25"
            BorderBrush="Black"
            BorderThickness="5"
            Background="LightGray"
            Padding="10" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="12,12,0,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Label 
                    x:Name="counter"
                    Content="0"
                    FontSize="42"
                    Foreground="Black"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                <UniformGrid 
                    Grid.Row="1"
                    Columns="3"
                    Margin="0,0,0,12">

                    <Button Content="Start" Click="StartTimer"/>
                    <Button Content="Stop" Click="StopTimer"/>
                    <Button Content="Reset" Click="ResetTimer"/>
                </UniformGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
