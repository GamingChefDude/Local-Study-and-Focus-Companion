<UserControl x:Class="Local_Study_and_Focus_Companion.View.StatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:Local_Study_and_Focus_Companion.View"
             Width="1920" Height="1080">
    
    <Grid Background="#999999">
        <Grid.Resources>
            <!-- Main Widget -->
            <Style x:Key="MainWidget" TargetType="Border">
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="5"/>
                <Setter Property="Background" Value="LightGray"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
        </Grid.Resources>
            <!-- STATS WIDGET -->
        <Border Style="{StaticResource MainWidget}"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Margin="12,12,12,12">

            <Grid Margin="10">
                <!-- Top-right toggle button -->
                <Button Content="Back to study"
                        Command="{Binding SwitchViewCommand}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="12,12,0,0"
                        Padding="8,4"/>

                <Button Content="{Binding SelectedRangeLabel}"
                        Command="{Binding ToggleStatsRangeCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,12,12,0"
                        Padding="8,4"/>

                <lvc:CartesianChart Name="BarChart"
                    Series="{Binding SeriesCollection}"
                    LegendLocation="Right" Margin="0,36,0,0"> 

                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Subject" Labels="{Binding Labels}"/>
                    </lvc:CartesianChart.AxisX>

                    <lvc:CartesianChart.AxisY>
                        <!-- Format numeric axis values (hours) to hh:mm:ss -->
                        <lvc:Axis Title="Time Studied" LabelFormatter="{Binding YFormatter}"/>
                    </lvc:CartesianChart.AxisY>

                </lvc:CartesianChart>

            </Grid>
        </Border>
    </Grid>
</UserControl>
